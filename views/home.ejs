<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User Management System</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="node.css">
</head>
<header>


</header>

<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">User Management System</h1>

        <!-- Display Users -->
        <div class="card mb-5">
            <div class="card-header bg-primary text-white">
                <h4>Current Users</h4>
            </div>
            <div class="card-body">
                <% if (data.length===0) { %>
                    <p>No users available.</p>
                    <% } else { %>
                        <table class="table table-bordered table-hover">
                            <thead class="table-secondary">
                                <tr>
                                    <th>User Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Age</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach(user=> { %>
                                    <tr>
                                        <td>
                                            <%= user.userUniqueId %>
                                        </td>
                                        <td>
                                            <%= user.userName %>
                                        </td>
                                        <td>
                                            <%= user.userEmail %>
                                        </td>
                                        <td>
                                            <%= user.userAge %>
                                        </td>
                                        <td>
                                            <form action="/delete" method="post" style="display:inline;">
                                                <input type="hidden" name="userUniqueId"
                                                    value="<%= user.userUniqueId %>">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <% } %>
            </div>
        </div>

        <!-- Add User Form -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h4>Add User</h4>
            </div>
            <div class="card-body">
                <form action="/" method="post" class="row g-3">
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="userUniqueId" placeholder="User ID" required>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="userName" placeholder="Name" required>
                    </div>
                    <div class="col-md-3">
                        <input type="email" class="form-control" name="userEmail" placeholder="Email" required>
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control" name="userAge" placeholder="Age" required>
                    </div>
                    <div class="col-md-1 d-grid">
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Update User Form -->
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h4>Update User</h4>
            </div>
            <div class="card-body">
                <form action="/update" method="post" class="row g-3">
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="userUniqueId" placeholder="User ID (to update)"
                            required>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="userName" placeholder="New Name">
                    </div>
                    <div class="col-md-3">
                        <input type="email" class="form-control" name="userEmail" placeholder="New Email">
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control" name="userAge" placeholder="New Age">
                    </div>
                    <div class="col-md-1 d-grid">
                        <button type="submit" class="btn btn-warning">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>